{
  "version": "1.0.0",
  "slug": "veripicks",
  "schema": "captify",
  "name": "VeriPicks",
  "description": "Advanced Sports Forecasting Platform - AI-powered betting insights with timeseries analysis",
  "type": "application",
  "category": "sports-analytics",
  "icon": "target",
  "agentId": "${BEDROCK_AGENT_ID}",
  "agentAliasId": "${BEDROCK_AGENT_ALIAS_ID}",
  "api": {
    "enabled": true,
    "source": "./api",
    "destination": "src/api/captify/veripicks",
    "build": true
  },
  "permissions": [
    "dynamodb:read",
    "dynamodb:write",
    "s3:read",
    "s3:write",
    "bedrock:invoke",
    "external-api:action-network"
  ],
  "features": {
    "chat": true,
    "notifications": true,
    "analytics": true,
    "export": true
  },
  "database": {
    "prefix": "veripicks",
    "tables": [
      "Game",
      "Pick",
      "OddsSnapshot",
      "MarketChange",
      "Team",
      "Player",
      "UserData",
      "UserStats",
      "Sportsbook",
      "MarketAnalysis",
      "LineMovement",
      "SteamMove"
    ]
  },
  "navigation": {
    "showInMenu": true,
    "menuItems": [
      {
        "label": "Games",
        "href": "/",
        "icon": "layout-dashboard"
      },
      {
        "label": "Picks",
        "href": "/picks",
        "icon": "target"
      },
      {
        "label": "Analytics",
        "href": "/analytics",
        "icon": "bar-chart-3"
      }
    ]
  },
  "dependencies": {
    "@captify/api": "workspace:*",
    "@captify/chat": "workspace:*"
  }
}
