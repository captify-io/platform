    {
      "label": "dev:watch",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "dev:watch"],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
