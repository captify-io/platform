    },
    {
      "label": "build:packages",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "build:packages"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      }
    },
    {
      "label": "amplify:simulate",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "amplify:simulate"],
