    {
      "label": "dev:packages-only",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "dev:packages"],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
