# Environment Configuration Template for Amplify
# Copy this file to .env.local for local development
# Set these variables in Amplify Console for each environment

# Authentication & Session Management
NEXTAUTH_URL=https://your-app-domain.amplifyapp.com
NEXTAUTH_SECRET=your-nextauth-secret-key

# AWS Cognito Configuration
NEXT_PUBLIC_COGNITO_CLIENT_ID=your-cognito-client-id
NEXT_PUBLIC_COGNITO_ISSUER=https://your-cognito-domain
COGNITO_CLIENT_SECRET=your-cognito-client-secret
COGNITO_USER_POOL_ID=your-user-pool-id
COGNITO_SERVICE_CATALOG_POOL_ID=your-service-catalog-pool-id
COGNITO_DOMAIN=https://cognito-idp.region.amazonaws.com

# AWS Configuration
REGION=us-east-1
AWS_REGION=us-east-1
ACCESS_KEY_ID=your-access-key-id
SECRET_ACCESS_KEY=your-secret-access-key

# AWS Bedrock Configuration
BEDROCK_AGENT_ID=your-bedrock-agent-id
BEDROCK_AGENT_ALIAS_ID=your-bedrock-agent-alias-id
BEDROCK_SESSION_ID=your-session-id
NEXT_PUBLIC_BEDROCK_AGENT_ID=your-bedrock-agent-id

# AWS S3 Configuration
S3_BUCKET=your-s3-bucket-name
S3_REGION=us-east-1

# DynamoDB Configuration
DYNAMODB_APPLICATIONS_TABLE=captify-applications
DYNAMODB_USER_APPLICATION_STATE_TABLE=captify-user-application-state
DYNAMODB_ORGANIZATION_SETTINGS_TABLE=captify-organization-settings

# API Gateway
API_GATEWAY_URL=https://your-api-gateway-url.execute-api.region.amazonaws.com/stage

# Application Environment
NODE_ENV=production
