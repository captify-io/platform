{
  "name": "@captify/client",
  "version": "1.0.0",
  "description": "Unified client-side SDK for Captify platform",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "peerDependencies": {
    "next": "^15.0.0",
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^22.18.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.34.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}
