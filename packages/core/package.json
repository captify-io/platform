{
  "name": "@captify/core",
  "version": "1.0.0",
  "description": "Core utilities, hooks, components, and libraries for Captify applications",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./lib/*": {
      "import": "./dist/lib/*.mjs",
      "require": "./dist/lib/*.js",
      "types": "./dist/lib/*.d.ts"
    },
    "./hooks/*": {
      "import": "./dist/hooks/*.mjs",
      "require": "./dist/hooks/*.js",
      "types": "./dist/hooks/*.d.ts"
    },
    "./components/*": {
      "import": "./dist/components/*.mjs",
      "require": "./dist/components/*.js",
      "types": "./dist/components/*.d.ts"
    },
    "./auth/*": {
      "import": "./dist/auth/*.mjs",
      "require": "./dist/auth/*.js",
      "types": "./dist/auth/*.d.ts"
    },
    "./chat": {
      "import": "./dist/chat/index.mjs",
      "require": "./dist/chat/index.js",
      "types": "./dist/chat/index.d.ts"
    },
    "./chat/*": {
      "import": "./dist/chat/*.mjs",
      "require": "./dist/chat/*.js",
      "types": "./dist/chat/*.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "watch": "tsup --watch",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^0.0.39",
    "@ai-sdk/azure": "^1.0.9",
    "@ai-sdk/google": "^1.0.7",
    "@ai-sdk/openai": "^0.0.46",
    "@ai-sdk/react": "^0.0.37",
    "ai": "^4.2.0",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "groq-sdk": "^0.29.0",
    "lucide-react": "^0.526.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "recharts": "^3.1.2",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^2.5.2",
    "react": "^19.1.0",
    "next": "15.4.4",
    "next-auth": "^4.24.11"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^19.1.7",
    "@types/react-syntax-highlighter": "^15.5.13",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "rimraf": "^5.0.0"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "next": ">=14.0.0"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  }
}
