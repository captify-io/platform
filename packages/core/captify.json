{
  "version": "1.0.0",
  "slug": "core",
  "schema": "captify",
  "name": "Platform Administration",
  "description": "System administration interface for managing organizations, users, permissions, and platform settings",
  "type": "internal",
  "category": "administration",
  "icon": "shield-check",
  "database": {
    "prefix": "core",
    "tables": ["User", "UserRole", "UserState", "Organization"]
  },
  "permissions": [
    "platform.admin",
    "organizations.read",
    "organizations.write",
    "organizations.create",
    "organizations.delete",
    "users.read",
    "users.write",
    "users.create",
    "users.delete",
    "users.suspend",
    "roles.read",
    "roles.write",
    "roles.create",
    "roles.delete",
    "permissions.manage",
    "platform.settings.read",
    "platform.settings.write",
    "system.monitor",
    "audit.logs.read"
  ],
  "navigation": {
    "showInMenu": true,
    "menuItems": [
      {
        "label": "Dashboard",
        "href": "/",
        "icon": "layout-dashboard"
      },
      {
        "label": "Organizations",
        "href": "/organizations",
        "icon": "building"
      },
      {
        "label": "Users",
        "href": "/users",
        "icon": "users"
      },
      {
        "label": "Roles & Permissions",
        "href": "/roles",
        "icon": "key"
      },
      {
        "label": "Platform Settings",
        "href": "/settings",
        "icon": "settings"
      },
      {
        "label": "System Monitor",
        "href": "/monitor",
        "icon": "activity"
      },
      {
        "label": "Audit Logs",
        "href": "/audit",
        "icon": "file-text"
      }
    ]
  },
  "features": {
    "multiTenant": true,
    "userManagement": true,
    "roleBasedAccess": true,
    "organizationSettings": true,
    "systemMonitoring": true,
    "auditLogging": true,
    "platformConfiguration": true
  },
  "access": {
    "requiresAdmin": true,
    "minimumRole": "platform.admin",
    "organizationScoped": false
  }
}
