  },
  "dependencies": {
    "lucide-react": "^0.460.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.4",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.0",
    "react-syntax-highlighter": "^15.5.0",
    "@ai-sdk/react": "^0.0.37"
  },
  "devDependencies": {
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19",
    "@types/node": "^22.10.2",
    "@types/react-syntax-highlighter": "^15.5.13",
    "typescript": "^5.7.2",
    "tsup": "^8.5.0",
    "rimraf": "^6.0.1"
