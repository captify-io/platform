{
  "name": "@captify/chat",
  "version": "0.0.1",
  "description": "Reusable chat interface components for Captify platform",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "watch": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/**/*.ts src/**/*.tsx",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@captify/core": "workspace:*",
    "ai": "^4.2.0",
    "lucide-react": "^0.461.0",
    "next-auth": "^4.24.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^19.1.7",
    "@types/react-dom": "^19.1.7",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "react": ">=19.1.0",
    "react-dom": ">=19.1.0"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  }
}
