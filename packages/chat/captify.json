{
  "version": "0.0.1",
  "slug": "chat",
  "schema": "captify",
  "name": "Chat Console",
  "description": "AI-powered chat interface with conversation management and agent interactions",
  "type": "internal",
  "category": "communication",
  "icon": "message-circle",
  "agentId": "${BEDROCK_AGENT_ID}",
  "agentAliasId": "${BEDROCK_AGENT_ALIAS_ID}",
  "database": {
    "prefix": "chat",
    "tables": [
      "UserAgent",
      "AgentCreationJob",
      "ChatThread",
      "ChatMessage",
      "ChatSession"
    ]
  },
  "permissions": [
    "chat.read",
    "chat.write",
    "agents.read",
    "agents.write",
    "threads.read",
    "threads.write",
    "threads.delete",
    "messages.read",
    "messages.write"
  ],
  "navigation": {
    "showInMenu": true,
    "menuItems": [
      {
        "label": "Console",
        "href": "/",
        "icon": "message-circle"
      },
      {
        "label": "Agents",
        "href": "/agents",
        "icon": "bot"
      },
      {
        "label": "History",
        "href": "/history",
        "icon": "history"
      },
      {
        "label": "Settings",
        "href": "/settings",
        "icon": "settings"
      }
    ]
  }
}
