{
  "compilerOptions": {
    "types": ["react", "react-dom"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ES2020",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "incremental": false
  },
  "include": [
    "src/lib/**/*",
    "src/components/**/*",
    "src/hooks/**/*",
    "src/types/**/*", 
    "src/index.ts",
    "src/api.ts"
  ],
  "exclude": [
    "src/app/**/*",
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "**/*.stories.*",
    "node_modules"
  ]
}