{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "src/index.ts",
    "src/lib/index.ts",
    "src/lib/auth.ts",
    "src/lib/api.ts",
    "src/lib/utils.ts",
    "src/hooks/index.ts",
    "src/types/index.ts",
    "src/components/index.ts",
    "src/components/ui/index.ts",
    "src/components/theme/index.ts",
    "src/services/index.ts"
  ],
  "exclude": ["node_modules", "dist", ".next"]
}
