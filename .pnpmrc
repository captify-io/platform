# Use hoisted node linker for monorepo compatibility

node-linker=hoisted

# Dedupe peer dependencies to prevent React version conflicts

dedupe-peer-dependents=true

# Hoist React and related packages to root to ensure single version

public-hoist-pattern[]=_react_
public-hoist-pattern[]=_@types/react_

# Auto install peer dependencies

auto-install-peers=true
