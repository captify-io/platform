{
  "name": "@captify-io/platform",
  "private": false,
  "version": "1.0.18",
  "type": "module",
  "description": "Core components, utilities, and services for the Captify platform",
  "scripts": {
    "dev": "next dev --turbo -p 3000",
    "dev:webpack": "next dev -p 3000",
    "build": "npm run build:app && npm run build:package",
    "build:app": "next build",
    "build:package": "tsup && tsc --project tsconfig.build.json --emitDeclarationOnly",
    "build:dev": "tsup --watch",
    "start": "next start -p 8081",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next dist node_modules",
    "prepublishOnly": "npm run build:package"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch": "^3.883.0",
    "@aws-sdk/client-cognito-identity": "^3.876.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.873.0",
    "@aws-sdk/client-config-service": "^3.883.0",
    "@aws-sdk/client-dynamodb": "^3.873.0",
    "@aws-sdk/client-eventbridge": "^3.883.0",
    "@aws-sdk/client-lambda": "^3.883.0",
    "@aws-sdk/client-s3": "^3.873.0",
    "@aws-sdk/client-securityhub": "^3.884.0",
    "@aws-sdk/client-ssm": "^3.883.0",
    "@aws-sdk/credential-providers": "^3.873.0",
    "@aws-sdk/lib-dynamodb": "^3.873.0",
    "@captify-io/pmbook": "^1.0.4",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/react": "19.1.1",
    "@types/react-dom": "19.1.1",
    "clsx": "^2.1.1",
    "eslint": "^9.16.0",
    "eslint-config-next": "15.5.2",
    "lucide-react": "^0.542.0",
    "next": "15.5.2",
    "next-auth": "5.0.0-beta.29",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "tw-animate-css": "^1.3.8",
    "typescript": "5.9.2",
    "uuid": "^11.1.0"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./auth": {
      "types": "./dist/lib/auth.d.ts",
      "import": "./dist/lib/auth.mjs",
      "require": "./dist/lib/auth.js"
    },
    "./api": {
      "types": "./dist/lib/api.d.ts",
      "import": "./dist/lib/api.mjs",
      "require": "./dist/lib/api.js"
    },
    "./utils": {
      "types": "./dist/lib/utils.d.ts",
      "import": "./dist/lib/utils.mjs",
      "require": "./dist/lib/utils.js"
    },
    "./ui": {
      "types": "./dist/components/ui.d.ts",
      "import": "./dist/components/ui.mjs",
      "require": "./dist/components/ui.js"
    },
    "./theme": {
      "types": "./dist/components/theme.d.ts",
      "import": "./dist/components/theme.mjs",
      "require": "./dist/components/theme.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/captify-io/platform.git"
  },
  "keywords": [
    "captify",
    "react",
    "components",
    "ui",
    "auth",
    "api",
    "nextjs"
  ],
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "next": "^14.0.0 || ^15.0.0",
    "next-auth": "^5.0.0",
    "next-themes": "^0.4.0",
    "lucide-react": "^0.400.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^3.0.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.5.2",
    "@types/node": "^24.3.1",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "tsup": "^8.5.0"
  }
}
