{
  "name": "@captify-io/platform",
  "version": "1.0.4",
  "type": "module",
  "description": "Captify Platform - Next.js application with cross-origin authentication and API proxy",
  "scripts": {
    "dev": "next dev -p 3000 --turbo",
    "dev:webpack": "next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000",
    "start:production": "NODE_ENV=production ./node_modules/.bin/next start -p 8080",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next node_modules",
    "deploy:aws": "node bin/captify-deploy.js",
    "deploy:eb": "bash scripts/deploy-eb.sh",
    "deploy:eb:windows": "powershell -ExecutionPolicy Bypass -File scripts/deploy-eb.ps1",
    "installer": "tsx scripts/installer.ts"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock": "^3.896.0",
    "@aws-sdk/client-cognito-identity": "^3.876.0",
    "@aws-sdk/client-dynamodb": "^3.873.0",
    "@aws-sdk/lib-dynamodb": "^3.896.0",
    "@captify-io/core": "file:../core",
    "@tailwindcss/postcss": "^4.1.13",
    "eslint": "^9.16.0",
    "eslint-config-next": "^15.5.2",
    "lucide-react": "^0.544.0",
    "next": "^15.5.2",
    "next-auth": "5.0.0-beta.25",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "tailwindcss": "^4.1.13",
    "tw-animate-css": "^1.3.8"
  },
  "bin": {
    "captify-deploy": "./bin/captify-deploy.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/captify-io/platform.git"
  },
  "keywords": [
    "captify",
    "nextjs",
    "platform",
    "auth",
    "api",
    "aws"
  ],
  "overrides": {
    "inflight": "npm:@aashutoshrathi/word-wrap@^1.2.6",
    "rimraf": "^5.0.0",
    "glob": "^10.0.0",
    "cross-spawn-async": "cross-spawn",
    "prismjs": "^1.30.0",
    "@types/react-dom": "^19.1.9",
    "react-dom": "19.1.1"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.5.2",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "tsx": "^4.7.1",
    "typescript": "5.9.2"
  }
}
