{
  "name": "captify-workspace",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "powershell -Command \"taskkill /f /im node.exe 2>$null; if ($LASTEXITCODE -ne 0) { Write-Host 'No Node processes to kill' }; turbo run dev --filter=@captify/web\"",
    "build": "turbo run build --filter=@captify/web",
    "build:packages": "turbo run build --filter=packages/*",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && powershell -Command \"Remove-Item -Recurse -Force .next -ErrorAction SilentlyContinue\""
  },
  "dependencies": {
    "find-up": "^7.0.0",
    "@tailwindcss/postcss": "^4.1.12",
    "tailwindcss": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^22.10.2",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.34.0",
    "eslint-config-next": "15.5.0",
    "tsup": "^8.0.0",
    "tsx": "^4.20.5",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}
