{
  "name": "captify-platform",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "next dev --turbo",
    "dev:watch": "concurrently \"pnpm run dev:packages\" \"pnpm run dev\" --names \"ðŸ“¦,âš¡\" --prefix-colors \"blue,green\"",
    "dev:packages": "pnpm --filter @captify/core run dev & pnpm --filter @captify/mi run dev",
    "build": "next build",
    "build:debug": "cross-env NODE_OPTIONS=--trace-warnings next build",
    "build:amplify": "pnpm run build:packages && next build",
    "build:packages": "pnpm --filter @captify/core run build && pnpm --filter @captify/mi run build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "type-check:packages": "pnpm --filter @captify/core run type-check && pnpm --filter @captify/mi run type-check",
    "deploy:check": "pnpm run type-check && pnpm run type-check:packages && pnpm run lint",
    "clean": "rm -rf .next dist && pnpm --filter @captify/core run clean && pnpm --filter @captify/mi run clean",
    "clean:all": "pnpm run clean && rm -rf node_modules packages/*/node_modules",
    "install:list": "node install.js list",
    "install:package": "node install.js install",
    "install:core": "node install.js install core",
    "install:core-metadata": "node install.js install core --TableMetadata"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity": "^3.876.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.873.0",
    "@aws-sdk/client-dynamodb": "^3.873.0",
    "@aws-sdk/client-neptunedata": "^3.873.0",
    "@aws-sdk/client-s3": "^3.873.0",
    "@aws-sdk/credential-providers": "^3.873.0",
    "@aws-sdk/lib-dynamodb": "^3.873.0",
    "@aws-sdk/util-dynamodb": "^3.873.0",
    "@captify/core": "workspace:*",
    "@captify/mi": "workspace:*",
    "@types/node": "22.10.3",
    "@types/react": "19.1.1",
    "@types/react-dom": "19.1.1",
    "lucide-react": "^0.542.0",
    "next": "15.5.2",
    "next-auth": "5.0.0-beta.29",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "tailwindcss": "^4.1.12",
    "tw-animate-css": "^1.0.1",
    "typescript": "5.9.2",
    "uuid": "^11.1.0",
    "@tailwindcss/postcss": "^4.1.12",
    "esbuild": "0.25.8",
    "eslint": "^9.16.0",
    "eslint-config-next": "15.5.2",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "tsup": "^8.0.0"
  },
  "devDependencies": {
    "@types/uuid": "^10.0.0",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "execa": "^9.6.0",
    "ws": "^8.18.3"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "0.25.8",
      "typescript": "5.9.2"
    }
  }
}
