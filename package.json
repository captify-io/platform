{
  "name": "captify-workspace",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "packages/*",
    "packages/client/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:all": "turbo run dev",
    "dev:packages": "turbo run dev --filter=packages/*",
    "build": "pnpm run build:manifests && pnpm run build:packages:direct && next build",
    "build:all": "turbo run build",
    "build:packages": "turbo run build --filter=packages/*",
    "build:packages:direct": "pnpm run build:clean && pnpm run build:client && pnpm run build:chat && pnpm run build:api && pnpm run build:captify",
    "build:manifests": "tsx manifest-builder.ts",
    "build:clean": "pnpm run clean:packages",
    "build:client": "cd packages/client && pnpm run build",
    "build:chat": "cd packages/chat && pnpm run build",
    "build:api": "cd packages/api && pnpm run build",
    "build:amplify": "pnpm run build:manifests && pnpm run build:packages:direct && pnpm run build:next",
    "build:next": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:all": "turbo run lint",
    "lint:packages": "turbo run lint --filter=packages/*",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "type-check:all": "turbo run type-check",
    "type-check:packages": "turbo run type-check --filter=packages/*",
    "validate": "pnpm run lint && pnpm run type-check && pnpm run build",
    "validate:all": "turbo run lint type-check build",
    "validate:packages": "turbo run lint type-check build --filter=packages/*",
    "clean": "rm -rf .next out dist",
    "clean:all": "turbo run clean",
    "clean:packages": "turbo run clean --filter=packages/*",
    "dev:turbo": "next dev --turbopack",
    "dev:fast": "next dev --turbopack --port 3001",
    "build:analyze": "ANALYZE=true next build",
    "build:turbo": "next build --experimental-build-mode=compile",
    "deploy": "bash deploy.sh",
    "deploy:dev": "bash deploy.sh dev",
    "deploy:staging": "bash deploy.sh staging",
    "deploy:prod": "bash deploy.sh prod",
    "deploy:windows": "powershell -ExecutionPolicy Bypass -File deploy.ps1",
    "deploy:windows:dev": "powershell -ExecutionPolicy Bypass -File deploy.ps1 dev",
    "deploy:windows:staging": "powershell -ExecutionPolicy Bypass -File deploy.ps1 staging",
    "deploy:windows:prod": "powershell -ExecutionPolicy Bypass -File deploy.ps1 prod",
    "sync-env": "bash sync-env.sh",
    "sync-env:windows": "powershell -ExecutionPolicy Bypass -File sync-env.ps1",
    "amplify:status": "amplify status",
    "amplify:console": "amplify console",
    "setup-local-db": "tsx scripts/setup-local-dynamodb.ts",
    "db:local": "docker run -p 8000:8000 amazon/dynamodb-local",
    "install-app": "node captify-controller.js install",
    "install-db": "tsx scripts/install.ts",
    "install-db:fast": "tsx scripts/install.ts --skip-wait",
    "captify:install": "node captify-controller.js install",
    "captify:auto-install": "node captify-controller.js auto-install",
    "captify:list": "node captify-controller.js list",
    "build:captify": "cd apps/captify && pnpm run build"
  },
  "dependencies": {
    "@captify/api": "workspace:*",
    "@captify/client": "workspace:*",
    "next": "15.5.0",
    "next-auth": "^4.24.11",
    "next-themes": "^0.4.6",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "@captify/chat": "workspace:*",
    "@captify/captify": "workspace:*"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "^22.10.2",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.34.0",
    "eslint-config-next": "15.5.0",
    "tailwindcss": "^4.1.12",
    "tsup": "^8.0.0",
    "tsx": "^4.20.5",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}
