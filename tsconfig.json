{
  "compilerOptions": {
    "types": ["react", "react-dom"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@captify/admin": ["./apps/admin/src"],
      "@captify/admin/*": ["./apps/admin/src/*"],
      "@captify/mi": ["./apps/mi/src"],
      "@captify/mi/*": ["./apps/mi/src/*"],
      "@captify/pmbook": ["./apps/pmbook/src"],
      "@captify/pmbook/*": ["./apps/pmbook/src/*"],
      "@captify/rmf": ["./apps/rmf/src"],
      "@captify/rmf/*": ["./apps/rmf/src/*"],
      "@captify/core": ["./packages/core/src"],
      "@captify/core/*": ["./packages/core/src/*"]
    },
    "target": "ES2022"
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "packages/*/src",
    "packages/*/dist",
    "apps/*/src",
    "apps/*/dist"
  ]
}
