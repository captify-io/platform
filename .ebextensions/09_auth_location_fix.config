files:
  "/etc/nginx/conf.d/elasticbeanstalk/auth_buffers.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      # Special handling for NextAuth callback routes with very large headers
      location /api/auth/ {
        # Even larger buffers specifically for OAuth callbacks
        proxy_buffer_size 1024k;
        proxy_buffers 128 1024k;
        proxy_busy_buffers_size 2048k;
        
        # Pass through to Next.js
        proxy_pass http://127.0.0.1:3000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Ensure proper buffering
        proxy_buffering on;
        proxy_request_buffering on;
      }

container_commands:
  01_create_eb_dir:
    command: "mkdir -p /etc/nginx/conf.d/elasticbeanstalk"
  02_reload_after_auth:
    command: "nginx -t && systemctl reload nginx"